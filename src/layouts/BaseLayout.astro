  description = "NavDhan by Kubar Labs delivers lender-grade API workflows that help NBFCs and banks serve MSMEs with faster, data-rich credit."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&family=Orbitron:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
  --color-background: #040404;
  --color-surface: #101010;
  --color-surface-elevated: #151515;
  --color-border: #242424;
  --color-border-hover: #3a3a3a;
  --color-text-primary: #f7f7f7;
  --color-text-secondary: #cccccc;
  --color-text-tertiary: #9c9c9c;
  --color-primary: #1f4cf2;
  --color-primary-dark: #1537b4;
  --color-accent: #f59e0b;
  --color-accent-subtle: rgba(245, 158, 11, 0.12);
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --spacing-2xl: 4rem;
    --spacing-3xl: 6rem;
    --font-body: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    --font-heading: 'Space Grotesk', -apple-system, BlinkMacSystemFont, sans-serif;
    --max-width: 1200px;
    --content-padding: 2rem;
    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;
    --transition-slow: 350ms ease;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
  }

  body {
    font-family: var(--font-body);
    background-color: var(--color-background);
    color: var(--color-text-primary);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow-x: hidden;
  }

  body.nav-open {
    overflow: hidden;
  }

  main {
    padding-top: 5.5rem;
  }

  a:focus-visible,
  button:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-heading);
    line-height: 1.2;
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
  }

  h2 {
    font-size: clamp(2rem, 4vw, 3rem);
    letter-spacing: -0.01em;
  }

  h3 {
    font-size: clamp(1.5rem, 3vw, 2rem);
  }

  p {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  a:hover {
    color: var(--color-accent);
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .section {
    padding: var(--spacing-3xl) 0;
    scroll-margin-top: 80px;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.875rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 10px;
    transition: all var(--transition-base);
    cursor: pointer;
    border: none;
    text-decoration: none;
    font-family: var(--font-body);
    background: var(--color-surface-elevated);
    color: var(--color-text-primary);
  }

  .btn svg {
    flex-shrink: 0;
  }

  .btn-primary {
    background: var(--color-primary);
    color: #ffffff;
    box-shadow: 0 10px 30px rgba(74, 158, 255, 0.2);
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 14px 40px rgba(74, 158, 255, 0.3);
  }

  .btn-secondary {
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-primary);
  }

  .btn-secondary:hover {
    border-color: var(--color-border-hover);
    background: var(--color-surface-elevated);
    transform: translateY(-2px);
  }

  .btn-large {
    padding: 1rem 2.5rem;
    font-size: 1.125rem;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    :root {
      --content-padding: 1.25rem;
      --spacing-3xl: 4rem;
    }

    .section {
      padding: var(--spacing-2xl) 0;
    }

    h1 {
      font-size: clamp(2rem, 8vw, 2.5rem);
    }

    h2 {
      font-size: clamp(1.5rem, 6vw, 2rem);
    }

    p {
      font-size: 1rem;
    }
  }

  ::selection {
    background-color: var(--color-accent-subtle);
    color: var(--color-text-primary);
  }

  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: var(--color-background);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--color-border);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--color-border-hover);
  }
</style>
