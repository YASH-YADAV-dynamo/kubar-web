<section id="contact" class="section cta">
  <div class="container">
    <div class="cta-card">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Transform MSME Lending?</h2>
        <p class="cta-description">
          Join leading NBFCs, banks, and fintech lenders serving India's underbanked MSMEs with NavDhan.
          Switch on both Seller and Buyer apps instantly with zero code required.
        </p>
        <div class="cta-actions">
          <a href="mailto:partner@navdhan.com" class="btn btn-primary btn-large">
            Partner with Us
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M4.16667 10H15.8333M15.8333 10L10 4.16667M15.8333 10L10 15.8333" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="mailto:demo@navdhan.com" class="btn btn-secondary btn-large">Schedule a Demo</a>
        </div>
        <div class="cta-stats">
          <div class="cta-stat">
            <div class="cta-stat-value">40x</div>
            <div class="cta-stat-label">Cost advantage vs traditional</div>
          </div>
          <div class="cta-stat-divider"></div>
          <div class="cta-stat">
            <div class="cta-stat-value">38+</div>
            <div class="cta-stat-label">ONDC network nodes</div>
          </div>
          <div class="cta-stat-divider"></div>
          <div class="cta-stat">
            <div class="cta-stat-value">Zero</div>
            <div class="cta-stat-label">Code required from partners</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .cta {
    background: var(--color-background);
    padding: var(--spacing-2xl) 0;
  }

  .cta-card {
    padding: var(--spacing-2xl) var(--spacing-xl);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    text-align: center;
  }

  .cta-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .cta-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .cta-actions {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--spacing-2xl);
  }

  .btn-large {
    padding: 0.875rem 2rem;
    font-size: 1rem;
  }

  .cta-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-lg);
    padding: var(--spacing-lg) 0;
    border-top: 1px solid var(--color-border);
  }

  .cta-stat {
    text-align: center;
  }

  .cta-stat-value {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.25rem;
    line-height: 1;
  }

  .cta-stat-label {
    font-size: 0.95rem;
    color: var(--color-text-tertiary);
    line-height: 1.4;
  }

  .cta-stat-divider {
    display: none;
  }

  @media (max-width: 768px) {
    .cta-card {
      padding: var(--spacing-xl) var(--spacing-md);
    }

    .cta-title {
      font-size: 1.75rem;
    }

    .cta-description {
      font-size: 1rem;
    }

    .cta-actions {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .btn-large {
      width: 100%;
      justify-content: center;
    }

    .cta-stats {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .cta-stat-value {
      font-size: 2rem;
    }
  }
</style>
